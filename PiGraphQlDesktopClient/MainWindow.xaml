<Window x:Class="PiGraphQlDesktopClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PiGraphQlDesktopClient"
        mc:Ignorable="d"
        Title="ThinkIQ.Marconi 4 PI/AF (c) ThinkIQ 2021" Height="450" Width="800">
    <Grid>
        <StackPanel Name="MarconiPanel" VerticalAlignment="Center" HorizontalAlignment="Center" Width="150">

            <Button x:Name="SignInButton" Content="SignIn" IsEnabled="True" Click="SignInButton_Click" />

            <Label x:Name="SignInLabel" Content="Label" IsEnabled="False" HorizontalContentAlignment="Center"/>


            <Button x:Name="Marconi_Open" Content="Connect..." IsEnabled="False" Click="Marconi_Open_Click" />

            <Button x:Name="Marconi_Close" Content="Hang Up" IsEnabled="False" Click="Marconi_Close_Click" />

            <Label Name="MarconiIdLabel" Content="Marconi #: " HorizontalContentAlignment="Center"/>

            <TextBox Name="MarconiIdText" Text="---" IsReadOnly="True" HorizontalContentAlignment="Center"/>

        </StackPanel>
    </Grid>
</Window>
